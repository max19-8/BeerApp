<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_view_beer_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="splashScreenIconSize">@dimen/splashscreen_icon_size</item>
        <item name="postSplashScreenTheme">@style/Theme.BeerApp</item>
    </style>
</resources>