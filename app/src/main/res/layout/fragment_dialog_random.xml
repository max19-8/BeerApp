<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_dialog_fragment">

    <ImageView
        android:id="@+id/image_beer_pop_up"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/border_beer_image"
        android:contentDescription="@string/image_pop_up_description" />
    <TextView
        android:id="@+id/text_view_name_beer_pop_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:maxLines="1"
        android:textColor="@color/white"
        tools:text="NAME"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_view_alcohol_content_beer_pop_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:textAlignment="center"
        android:textColor="@color/white"
        tools:text="ALCOHOL CONTENT" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_exit"
        app:cornerRadius="12dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="@string/button_ok"
        android:backgroundTint="@color/grey"
        android:layout_gravity="center"/>
</LinearLayout>